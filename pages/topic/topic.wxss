.container {
    background-color: #D6E4FF;
}
.swiperWrap {
    display: flex;
    align-items: center;
    height: 300rpx;
    background: linear-gradient(to bottom, #597EF7, #D6E4FF);
}
.swiper {
    width: 100%;
    height: 300rpx;
}
.swiperItem {
    position: relative;
    width: 680rpx;
    height: 240rpx;
    margin: 30rpx auto;
    padding: 45rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    border-radius: 16rpx;
    background-color: #D6E4FF;
    box-shadow: 0 0 20rpx 0 #ADC6FF;
}
.swiperItem .avatar {
    width: 150rpx;
    height: 150rpx;
    flex-shrink: 0;
}
.swiperItem .info {
    padding-left: 30rpx;
}
.swiperItem .info .title {
    margin-bottom: 16rpx;
    color: #2F54EB;
    font-size: 36rpx;
}
.swiperItem .info .text {
    font-size: 24rpx;
    color: #2F54EB;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.swiperItem .star {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
    padding: 20rpx;
}
.moduleTitle {
    padding-left: 30rpx;
    margin: 10rpx 0 20rpx;
    font-size: 36rpx;
    color: #85A5FF;
}
.listWrap {
    padding: 0 30rpx;
    box-sizing: border-box;
}
.listItem {
    position: relative;
    height: 130rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    border-radius: 12rpx;
    background-color: #ADC6FF;
}
.listItem .avatar {
    width: 90rpx;
    height: 90rpx;
    flex-shrink: 0;
}
.listItem .info {
    padding-left: 30rpx;
}
.listItem .info .title {
    margin-bottom: 10rpx;
    font-size: 30rpx;
    color: #597EF7;
}
.listItem .info .text {
    font-size: 22rpx;
    color: #597EF7;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.listItem .star {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
}
.listItem .star .starText {
    padding-left: 4rpx;
    font-size: 26rpx;
    color: #597EF7;
}