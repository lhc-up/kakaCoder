.container {
    background-color: #D6E4FF;
}
.searchWrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 140rpx;
    background: #597EF7;
    z-index: 2;
}
.select {
    margin: 0 20rpx 0 30rpx;
}
.help {
    margin-left: 10rpx;
}
.inputWrap {
    width: 100%;
    display: flex;
    align-items: center;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.input {
    width: 70%;
    height: 60rpx;
    padding: 0 30rpx;
    border-radius: 10rpx;
    color: #597ef7;
    background-color: #adc6ff;
}
.placeholder {
    font-size: 26rpx;
    color: #85a5ff;
}

.filterWrap {
    padding: 8rpx 0 0 50rpx;
}
.filterWrap .item {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #92A4EE;
}
.moduleTitle {
    margin-top: 150rpx;
    padding: 30rpx 0 0 30rpx;
    word-break: break-all;
    color: #85A5FF;
    font-size: 24rpx;
}
