.container {
    background-color: #D6E4FF;
}
.searchWrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background: #597EF7;
    z-index: 2;
}
.select {
    position: absolute;
    left: 45rpx;
    top: 30rpx;
}
.tabWrap {
    display: flex;
    justify-content: center;
    padding-top: 20rpx;
}
.tabWrap .tab {
    position: relative;
    margin: 0 40rpx;
    padding: 10rpx 0 16rpx;
    box-sizing: border-box;
    color: #D6E4FF;
    font-size: 32rpx;
}
.tabWrap .tab:after {
    position: absolute;
    bottom: 0;
    left: 10rpx;
    content: "";
    width: calc(100% - 20rpx);
    height: 6rpx;
    border-radius: 4rpx;
    background-color: #1d39c4;
    transform: scale(0);
    transition: all ease .2s;
}
.tabWrap .tab.selected {
    color: #1d39c4;
    font-weight: 600;
}
.tabWrap .tab.selected:after {
    transform: scale(1);
}
.listWrap {
    padding: 130rpx 30rpx 20rpx;
}
.repoItem {
    padding: 16rpx 30rpx;
    margin-bottom: 20rpx;
    background-color: #ADC6FF;
    border-radius: 14rpx;
}
.repoItem .repoTitle {
    display: flex;
    align-items: center;
    color: #2F54EB;
    font-size: 30rpx;
}
.repoItem .repoTitle .thick {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 16rpx;
    font-weight: 600;
}
.repoItem .repoDesc {
    padding: 10rpx 16rpx;
    word-break: break-all;
    color: #597EF7;
    font-size: 24rpx;
    text-indent: 0.5em;
}
.repoItem .repoAttr {
    display: flex;
    align-items: center;
    padding-left: 10rpx;
}
.repoItem .repoAttr .item {
    display: flex;
    align-items: center;
    margin-right: 30rpx;
    font-size: 20rpx;
    color: #597EF7;
}
.repoItem .repoAttr .item .icon {
    margin-right: 6rpx;
}
.repoItem .repoAttr .item .icon .languageColor {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    margin-right: 4rpx;
}
.devItem {
    position: relative;
    height: 130rpx;
    padding: 20rpx;
    display: flex;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    box-shadow: 0 0 16rpx #ADC6FF;
    background-color: #ADC6FF;
}
.devItem .avatar {
    width: 90prx;
    height: 90rpx;
    border-radius: 10rpx;
}
.devItem image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}
.devItem .devContent {
    padding-left: 20rpx;
    width: calc(100% - 90rpx);
}
.devItem .devContent .name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #2F54EB;
}
.emptyData {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.emptyText {
    padding: 30rpx 0;
    font-size: 32rpx;
    color: #85a5ff;
}