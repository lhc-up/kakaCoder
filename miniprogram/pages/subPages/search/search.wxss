.searchWrap {
    position: fixed;
    width: 100%;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #597EF7;
}
.inputWrap {
    width: 88%;
    height: 60rpx;
    display: flex;
    align-items: center;
    border-radius: 10rpx;
    color: #597ef7;
    background-color: #adc6ff;
}
.icon {
    padding: 0 20rpx;
}
.input {
    width: 100%;
    height: 100%;
}
.placeholder {
    font-size: 26rpx;
    color: #85a5ff;
}
.mainContent {
    padding: 140rpx 30rpx 30rpx;
}
.tip {
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #adc6ff;
}
.tip .text {
    margin-right: 40rpx;
}
.keywordList {
    display: flex;
    flex-wrap: wrap;
}
.keyword {
    margin-right: 16rpx;
    margin: 0 20rpx 20rpx 0;
    flex-shrink: 0;
    padding: 0 25rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #85a5ff;
    line-height: 54rpx;
    border: 2rpx solid #d6e4ff;
}
.hoverKeyword {
    background-color: rgba(0, 0, 0, .1);
}