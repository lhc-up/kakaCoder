.container {
    background-color: #D6E4FF;
}
.mainContent {
    padding: 30rpx;
    box-sizing: border-box;
}
.titleWrap {
    width: 100%;
    height: 80rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}
.titleInput {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    background-color: #fff;
}
.content {
    width: 100%;
}
.textarea {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    background-color: #fff;
}
.placeholder {
    color: #d6e4ff;
}
.submit {
    display: block;
    width: 630rpx !important;
    height: 80rpx;
    margin: 240rpx auto 0;
    line-height: 80rpx;
    font-size: 32rpx;
    font-weight: normal;
    color: #ffffff;
    padding: 0;
    border-radius: 20rpx;
    text-align: center;
    background: linear-gradient(to right, #6eaffa, #7277f7);
}
.btnHover {
    opacity: .8;
}