.container {
    background-color: #f0f5ff;
}
.mainContent {
    padding: 20rpx;
}
.topCard {
    margin-bottom: 20rpx;
    padding: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
}
.cardTitle {
    position: relative;
    width: 100%;
    padding-bottom: 20rpx;
    font-size: 34rpx;
    color: #262626;
}
.cardTitle .desc {
    padding-top: 10rpx;
    font-size: 24rpx;
    color: #8c8c8c;
}
.cardTitle:after {
    position: absolute;
    content: "";
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2rpx;
    background-color: #d6e4ff;
    transform: scaleY(.5);
}
.listWrap .item {
    margin-bottom: 20rpx;
    padding: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
}
.itemTitle {
    display: flex;
}
.itemTitle .avatar {
    width: 80rpx;
    height: 80rpx;
}
.itemTitle .avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.itemTitle .titleContent {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
}
.titleContent .user {
    margin-bottom: 10rpx;
    font-size: 32rpx;
    color: #262626;
}
.titleContent .info {
    font-size: 22rpx;
    color: #8c8c8c;
}