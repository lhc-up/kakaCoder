.container {
    background-color: #D6E4FF;
}
.searchWrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background: #597EF7;
    z-index: 2;
}
.addIssue {
    position: fixed;
    width: 90rpx;
    height: 90rpx;
    right: 90rpx;
    bottom: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #597ef7;
    border-radius: 50%;
    box-sizing: border-box;
    z-index: 10;
}
.select {
    position: absolute;
    left: 45rpx;
    top: 30rpx;
}
.tabWrap {
    display: flex;
    justify-content: center;
    padding-top: 20rpx;
}
.tabWrap .tab {
    position: relative;
    margin: 0 40rpx;
    padding: 10rpx 0 16rpx;
    box-sizing: border-box;
    color: #D6E4FF;
    font-size: 36rpx;
}
.tabWrap .tab:after {
    position: absolute;
    bottom: 0;
    left: 10rpx;
    content: "";
    width: calc(100% - 20rpx);
    height: 6rpx;
    border-radius: 4rpx;
    background-color: #1d39c4;
    transform: scale(0);
    transition: all ease .2s;
}
.tabWrap .tab.selected {
    color: #1d39c4;
    font-weight: 600;
}
.tabWrap .tab.selected:after {
    transform: scale(1);
}
.listWrap {
    padding: 130rpx 30rpx 20rpx;
}
.emptyData {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.emptyText {
    padding: 30rpx 0;
    font-size: 32rpx;
    color: #85a5ff;
}
.item {
    position: relative;
    padding: 20rpx;
    display: flex;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    box-shadow: 0 0 16rpx #ADC6FF;
    background-color: #ADC6FF;
}
.itemRight {
    padding-left: 20rpx;
}
.title {
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #1f1f1f;
}
.info {
    font-size: 22rpx;
    color: #8c8c8c;
}
.comments {
    margin-right: 20rpx;
}