.container {
    background-color: #D6E4FF;
}
.topContent {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    height: 180rpx;
    background-color: #597ef7;
    box-sizing: border-box;
    z-index: 2;
}
.intro .name {
    font-size: 40rpx;
}
.intro .desc {
    font-size: 30rpx;
}
.avatar {
    width: 140rpx;
    height: 140rpx;
}
.avatar image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}
.intro {
    padding-left: 30rpx;
    word-break: break-all;
    color: #d6e4ff;
    font-size: 30rpx;
}
.mainContent {
    padding: 210rpx 30rpx 30rpx;
}
.unLogin {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    padding-top: 180rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cardWrap {
    display: flex;
    justify-content: space-around;
    width: 100%;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.cardWrap .item {
    position: relative;
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.cardWrap .item:after {
    position: absolute;
    right: 0;
    top: 20rpx;
    content: "";
    width: 2px;
    height: 50rpx;
    transform: scaleX(.5);
    background-color: #adc6ff;
}
.cardWrap .item:last-child:after {
    display: none;
}
.cardWrap .item .itemTop {
    margin-bottom: 10rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #597ef7;
}
.cardWrap .item .itemBottom {
    font-size: 28rpx;
    color: #85a5ff;
    font-weight: 400;
}
.listWrap {
    background-color: #ffffff;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.starMe .itemLeft{
    display: flex;
    align-items: center;
}
.starMe .text {
    margin-right: 30rpx;
}
.listWrap .item {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
}
.item .itemLeft {
    font-size: 32rpx;
    color: #595959;
}
.item .itemRight {
    font-size: 26rpx;
    color: #8c8c8c;
}
.service {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0);
}
.itemHover {
    background-color: rgba(0, 0, 0, .1);
}